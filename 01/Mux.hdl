/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=notSel);
    And(a=a, b=notSel, out=outa); // outa = 0 if sel = 1
    And(a=b, b=sel, out=outb); // outb = 0 if sel = 0
    Or(a=outa, b=outb, out=out);
}